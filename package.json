{
  "name": "bomberjam-backend",
  "version": "1.0.0",
  "license": "ISC",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "clean": "rimraf .rpt2_cache/ dist/",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "build": "npm run clean && npm run build-server && npm run build-client && npm run build-simulator && npm run build-frontend-production",
    "build-server": "rollup -c --environment APPNAME:server",
    "build-client": "rollup -c --environment APPNAME:client",
    "build-simulator": "rollup -c --environment APPNAME:simulator",
    "build-frontend-development": "cd src/frontend/ && npm run build-development",
    "build-frontend-production": "cd src/frontend/ && npm run build-production",
    "training-export": "ts-node src/client/simulator.ts --bot=bot/bot.js",
    "training-browser": "ts-node src/client/index.ts --bot=bot/bot.js --config=config.json --mode=training",
    "join-match": "ts-node src/client/index.ts --bot=bot/bot.js --config=config.json --mode=match",
    "frontend": "cd src/frontend/ && npm run serve",
    "server": "npm run build-frontend-development && ts-node src/server/index.ts --frontend=../../dist/frontend"
  },
  "files": [
    "dist/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@colyseus/monitor": "^0.10.0",
    "@colyseus/schema": "^0.4.44",
    "colyseus": "^0.10.7",
    "colyseus.js": "^0.10.8",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.16.4",
    "lodash": "^4.17.15",
    "minimist": "^1.2.0",
    "open": "^6.3.0",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.2",
    "@types/express": "^4.16.1",
    "@types/lodash": "^4.14.134",
    "@types/mocha": "^5.2.7",
    "copy-webpack-plugin": "^5.0.3",
    "file-loader": "^4.0.0",
    "husky": "^2.4.0",
    "mocha": "^6.2.0",
    "prettier": "1.17.1",
    "pretty-quick": "^1.11.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.19.2",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.5.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3"
  }
}
